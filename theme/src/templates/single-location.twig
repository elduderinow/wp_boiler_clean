{% extends "base.twig" %}

{% block content %}
    <section class="hero">
        <h1>{{ location.title }}</h1>
    </section>

    <section class="content">
        {% include './partials/cards/card-location.twig' with {'location': location} %}
    </section>

    <section class="image">
        {% if (location.image) %}
            {% include './partials/components/picture.twig' with { 'picture': location.image } %}
        {% endif %}
    </section>

    {% block footer %}
        {% include './partials/general/footer.twig' %}
    {% endblock %}

    <hr/>
    <pre class="dump">
    {{ dump(location) }}
    </pre>
    <hr/>
{% endblock %}
